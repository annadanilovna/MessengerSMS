<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MessengerSMS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/backgroundDarkColor</item>
        <item name="colorPrimaryVariant">@color/backgroundDarkColor</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/design_default_color_on_secondary</item>
        <item name="android:windowBackground">@color/backgroundDarkColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:textColorPrimary">@color/whiteMediumEmphasis</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">#eee</item>
        <!--        <item name="android:fontFamily">@font/gilroy_extrabold</item>-->
        <!--        <item name="actionBarStyle">@style/Theme.MessengerSMS.HeaderBar</item>-->
        <item name="actionBarTheme">@style/Theme.MessengerSMS.AppBarOverlay</item>
        <item name="appBarLayoutStyle">@style/Theme.MessengerSMS.AppBarOverlay</item>
        <item name="popupTheme">@style/Theme.MessengerSMS.PopupOverlay</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <item name="chipIconTint">@color/chipIconTint</item>

        <item name="colorButtonNormal">#abc</item>
        <item name="colorControlHighlight">#fff</item>

        <item name="buttonStyle">@style/PrimaryColoredButton</item>

        <item name="toolbarStyle">@style/ToolBarStyle</item>
    </style>

    <style name="Theme.MessengerSMS.Chats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/backgroundDarkColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/toolbarDarkColor</item>
        <item name="android:navigationBarColor">@color/backgroundDarkColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Theme.MessengerSMS.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:windowBackground">@color/black</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/toolbarDarkColor</item>
        <item name="android:navigationBarColor">@color/backgroundDarkColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Theme.MessengerSMS.Messages"></style>
    <style name="Theme.MessengerSMS.Messages.Item" parent="Theme.MessengerSMS.Messages">
        <item name="font">@font/lobster_two</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="Theme.MessengerSMS.Messages.Item.Sent" parent="Theme.MessengerSMS.Messages.Item">
        <item name="background">@color/white</item>
    </style>
    <style name="Theme.MessengerSMS.Messages.Item.Receive" parent="Theme.MessengerSMS.Messages.Item">
        <item name="background">@color/red</item>
    </style>

    <style name="Theme.MessengerSMS.Toolbar">
        <item name="android:fontFamily">@font/lobster_two</item>
        <item name="android:textSize">17.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">#272727</item>
    </style>
    <style name="Theme.MessengerSMS.Toolbar.Text" parent="Theme.MessengerSMS.Toolbar">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.MessengerSMS.Toolbar.Text.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.MessengerSMS.Toolbar.Text.Subtitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MessengerSMS.Splash" parent="Theme.MessengerSMS.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/ic_launcher_background</item>
        <item name="android:navigationBarColor">@color/ic_launcher_background</item>
    </style>

    <style name="Theme.MessengerSMS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--        <item name="colorControlNormal">@color/red</item>-->
        <item name="android:fontFamily">@font/lobster_two</item>
        <item name="android:textSize">17.0sp</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textColor">#fdfdfd</item>
        <item name="android:textColorPrimary">#fdfdfd</item>
    </style>

    <style name="Theme.MessengerSMS.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="background">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/t</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
    </style>

    <style name="WindowTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.MessengerSMS.ChatRoomBox">
        <item name="android:background">@color/backgroundDarkColor</item>
    </style>

</resources>